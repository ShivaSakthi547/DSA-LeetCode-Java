//LeetCode #9 â€“ Palindrome Number
//Time Complexity: O(n)
//Space Complexity: O(1)



class Solution {
    public static boolean isPalindrome(int x) {
        int temp = x;
        int rev = 0;

        while (x > 0) {
            rev = rev * 10 + (x % 10);
            x /= 10;
        }

        if (temp == rev)
            return true;
        else
            return false;
    }
}
