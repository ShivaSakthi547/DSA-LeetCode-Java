// LeetCode 242 â€“ Valid Anagram
// Time Complexity: O(n log n)
// Space Complexity: O(n)

class Solution {
    public boolean isAnagram(String s, String t) {
        boolean res = false;
        if (s.length() == t.length()) {
            res = true;
            char[] a = s.toCharArray();
            char[] b = t.toCharArray();
            Arrays.sort(a);
            Arrays.sort(b);
            for (int i = 0; i < a.length; i++) {
                if (a[i] != b[i]) {
                    res = false;
                    break;
                }
            }
        }
        return res;
    }
}
