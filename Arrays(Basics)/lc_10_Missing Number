// LeetCode 268 â€“ Missing Number
// Time Complexity: O(n)
// Space Complexity: O(1)

class Solution {
    public int missingNumber(int[] nums) {
        int len = nums.length;
        int arraySum = 0;
        int totalSum = 0;

        for (int i = 0; i < len; i++) {
            arraySum += nums[i];
        }

        for (int i = 1; i <= len; i++) {
            totalSum += i;
        }

        return totalSum - arraySum;
    }
}
