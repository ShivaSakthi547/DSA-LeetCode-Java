//Question: LeetCode 977 â€“ Squares of a Sorted Array
//Time Complexity: O(n log n)
//Space Complexity: O(n)


import java.util.*;

class Solution {
    public int[] sortedSquares(int[] nums) {
        int len = nums.length;
        int[] final_array = new int[len];

        for (int i = 0; i < len; i++) {
            nums[i] = nums[i] * nums[i];
            final_array[i] = nums[i];
        }

        Arrays.sort(final_array);
        return final_array;
    }
}
